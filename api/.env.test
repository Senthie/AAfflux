# Test Environment Configuration
# 测试环境配置 - 使用独立的测试数据库

# Application
APP_NAME="Low-Code Platform Backend - Test"
DEBUG=true
HOST=0.0.0.0
PORT=8001

# Security
JWT_SECRET_KEY=test-secret-key-min-32-characters-long-for-testing-only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - PostgreSQL (测试数据库)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@14.12.0.102:5432/lowcode_test
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# MongoDB (测试数据库)
MONGODB_URL=mongodb://14.12.0.102:27017
MONGODB_DATABASE=lowcode_test

# Redis (测试数据库)
REDIS_URL=redis://14.12.0.102:6379
REDIS_DB=1  # 使用不同的 Redis DB
REDIS_MAX_CONNECTIONS=10

# Celery
CELERY_BROKER_URL=redis://14.12.0.102:6379/1
CELERY_RESULT_BACKEND=redis://14.12.0.102:6379/1

# Sentry (测试环境禁用)
SENTRY_ENVIRONMENT=test
SENTRY_TRACES_SAMPLE_RATE=0.0

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=104857600
GRIDFS_THRESHOLD=16777216

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
