# Application
APP_NAME="Low-Code Platform Backend"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
JWT_SECRET_KEY=your-secret-key-min-32-characters-long-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lowcode_platform
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=lowcode_platform

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# Celery (optional, defaults to Redis URL)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
GRIDFS_THRESHOLD=16777216  # 16MB in bytes

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
